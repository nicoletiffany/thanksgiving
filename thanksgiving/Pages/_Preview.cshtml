@model thanksgiving.Model.Greetings


@*<div class="custom">*@
<div class="form-group">
	<label class="col-2 control-label">Subject:</label> @Html.Raw(Model.subject)
	@*</div>*@


	@*<div class="to">*@
	<div class="form-group">
		<label class="col-2 control-label"></label>
		<div class="col-10">
			@Html.Raw(Model.toName),
		</div>

	</div>
	@*</div>*@


	<div class="form-group">
		<div class="col-10">
			@Html.Raw(Model.mesg)
		</div>
	</div>

	<br>

	<div class="from">
		<div class="form-group">
			<label class="col-2 control-label">Sincerely,</label>
			<div class="col-10">
				@Html.Raw(Model.fromName)
			</div>
		</div>
	</div>

	<br>
	<br>

	@if (ViewBag.Read == "read")
	{<div class="form-group">
			<label class="col-2 control-label"></label>
		</div>}
	else
	{<div class="form-group">
			<label asp-for="@Model.toEmail" class="col-2 control-label"></label>
			<div class="col-10">
				@Html.Raw(Model.toEmail)
			</div>
		</div>}



	@if (ViewBag.Read == "read")
	{<div class="form-group">
			<label class="col-2 control-label"></label>
		</div>}
	else
	{<div class="form-group">
			<label asp-for="@Model.fromEmail" class="col-2 control-label"></label>
			<div class="col-10">
				@Html.Raw(Model.fromEmail)
			</div>
		</div>}


</div>